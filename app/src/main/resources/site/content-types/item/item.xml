<?xml version="1.0" encoding="UTF-8"?>
<content-type>
  <display-name>Item</display-name>
  <super-type>base:structured</super-type>
  <form>
    <input name="rarity" type="TextLine">
      <label>Rarity</label>
      <occurrences minimum="1" maximum="1"/>
    </input>
    <input name="attunement" type="TextLine">
      <label>Attunement Required</label>
      <occurrences minimum="1" maximum="1"/>
    </input>
    <input name="type" type="TextLine">
      <label>Item type</label>
      <occurrences minimum="1" maximum="1"/>
    </input>
    <input name="typeNote" type="TextLine">
      <label>Item type note</label>
      <occurrences minimum="0" maximum="1"/>
    </input>
    <input name="text" type="HtmlArea">
      <label>Item body</label>
    </input>
  </form>
</content-type>