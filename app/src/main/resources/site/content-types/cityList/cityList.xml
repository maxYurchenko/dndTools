<?xml version="1.0" encoding="UTF-8"?>
<content-type>
  <display-name>Cities list</display-name>
  <super-type>base:structured</super-type>
  <form>
    <input name="cityHelper" type="ContentSelector">
      <label>City generator helper</label>
      <occurrences minimum="1" maximum="1"/>
      <config>
        <allowContentType>cityGeneratorHelper</allowContentType>
      </config>
    </input>
    <input name="tavernHelper" type="ContentSelector">
      <label>Tavern generator helper</label>
      <occurrences minimum="1" maximum="1"/>
      <config>
        <allowContentType>tavernGeneratorHelper</allowContentType>
      </config>
    </input>
  </form>
</content-type>